{
	"name": "Bugzilla Moz Search",
	"description": "Add Mozilla Bugzilla to your search engine",
	"version": "0.1",
	"manifest_version": 2,
	"applications":{
		"gecko": {
			"id": "bmo@search.dannycolin.com",
			"strict_min_version": "64.0"
		}
	},
	"developer": {
		"name": "Danny Colin",
		"url": "https://dannycolin.com"
	},
	"icons": {
		"16": "favicon.png"
	},
	"web_accessible_resources": [
		"favicon.png"
	],
  "chrome_settings_overrides": {
		"search_provider": {
			"name": "Mozilla Bugzilla",
      "keyword": "@bmo",
			"search_url": "https://bugzilla.mozilla.org/buglist.cgi?quicksearch={searchTerms}"
		}
	}
}
